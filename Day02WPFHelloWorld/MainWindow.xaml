<Window x:Class="Day02WPFHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Day02WPFHelloWorld"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <Label Content="What is your name?" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"  Width="150"/>
        <TextBox Name="TbxName" HorizontalAlignment="Left" Height="23" Margin="165,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Say Hello (label)" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="150" Height="25" Click="BtnSayHelloLabel_Click"/>
        <Button Content="Say Hello (msg box)" HorizontalAlignment="Left" Margin="165,41,0,0" VerticalAlignment="Top" Width="150" Height="25"
                Click="BtnSayHelloPopup_Click"/>
        <Label Name="LblGreeting" Content="..." HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top" Height="38" Width="305"/>

    </Grid>
</Window>
